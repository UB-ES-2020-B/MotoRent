<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/fons_login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="80dp"
            android:layout_height="85dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/moto_toast" />

        <TextView
            android:id="@+id/opcionsComptetxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opcions de la compta"
            android:textColor="@color/colorWelcomeName"
            android:textStyle="bold" />

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:text="Tancar sessió" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/automaticLoginCheck"
                android:layout_width="381dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:text="Entrar al compte automaticament"
                android:textColor="@color/colorWelcomeName" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:text="Opcions del perfil:"
            android:textColor="@color/colorWelcomeName"
            android:textStyle="bold" />

        <Button
            android:id="@+id/changePersonalInfBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Canviar informació personal" />

    </LinearLayout>
</LinearLayout>