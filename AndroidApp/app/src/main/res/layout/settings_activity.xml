<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/bg_testing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="80dp"
            android:layout_height="85dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/moto_toast" />

        <TextView
            android:id="@+id/opcionsComptetxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opcions del compte"
            android:textColor="@color/browser_actions_text_color"
            android:textStyle="bold" />

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:text="Tancar sessió"
            android:textColor="@color/colorWelcomeName"
            android:background="@drawable/buttons_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/automaticLoginCheck"
                android:layout_width="381dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:text="Entrar al compte automaticament"
                android:textColor="@color/browser_actions_text_color" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:text="Opcions del perfil:"
            android:textColor="@color/browser_actions_text_color"
            android:textStyle="bold" />

        <Button
            android:id="@+id/changePersonalInfBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Canviar informació personal"
            android:textColor="@color/colorWelcomeName"
            android:background="@drawable/buttons_bg"/>

        <Button
            android:id="@+id/changeBankInfBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="Canviar informació bancària"
            android:textColor="@color/colorWelcomeName"
            android:background="@drawable/buttons_bg"/>

        <TextView
            android:id="@+id/textViewAssist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="Opcions de servei d'Assistencia:"
            android:textColor="@color/browser_actions_text_color"
            android:textStyle="bold" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/callNumberButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assistència per trucada"
            android:textColor="@color/colorWelcomeName"
            android:background="@drawable/buttons_bg"/>
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/sendMailButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assistència per missatge"
            android:textColor="@color/colorWelcomeName"
            android:background="@drawable/buttons_bg"/>

    </LinearLayout>
</LinearLayout>